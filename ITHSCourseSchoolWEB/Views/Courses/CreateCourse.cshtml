@model ITHSCourseSchoolWEB.Models.Course

<form asp-action="CreateCourse">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Course</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="CourseTitle" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CourseTitle"  class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
              <div class="col-2">
                <label asp-for="CourseStart" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CourseStart"  class="form-control" />
                <span asp-validation-for="CourseStart" class="text-danger"></span>
            </div>
                <div class="col-2">
                <label asp-for="CourseEnd" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CourseEnd" class="form-control" />
                <span asp-validation-for="CourseEnd" class="text-danger"></span>
            </div>

            <div class="col-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
            <div class="col-4">
            <a asp-action="Index" class="btn btn-info text-white"><i class="fas fa-plus"></i> &nbsp; Back</a>
            </div>

        </div>
    </div>
</form>
